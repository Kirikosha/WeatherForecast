<Window
    x:Class="WeatherForecast.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WeatherForecast"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1366"
    Height="768"
    Background="#0b131e"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="150" />
            <ColumnDefinition MinWidth="700" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Border
                Margin="20px"
                Background="#202b3b"
                CornerRadius="20">
                <WrapPanel
                    Margin="5,25"
                    HorizontalAlignment="Center"
                    Orientation="Vertical">
                    <Button Content="Іконка сюди" />
                    <Button Margin="0,55,0,10" Content="Weather" />
                    <Button Margin="0,10,0,10" Content="Others" />
                    <Button Margin="0,10,0,0" Content="Settings" />
                </WrapPanel>
            </Border>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition MaxHeight="80" />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Border
                    Width="auto"
                    Margin="5"
                    Background="#202b3b"
                    CornerRadius="25">
                    <DockPanel Margin="10,7,0,7" HorizontalAlignment="Left">
                        <TextBox
                            Height="50"
                            MinWidth="500"
                            Background="#202b3b"
                            BorderThickness="0" />
                    </DockPanel>

                </Border>
            </Grid>
        </Grid>
        <Grid Grid.Column="2" />
    </Grid>
</Window>
